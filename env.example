# STF DeviceFarm Environment Configuration
# Copy this file to .env and modify as needed

# Database Configuration
RETHINKDB_HOST=rethinkdb
RETHINKDB_PORT=28015

# STF Configuration
SECRET=your_session_secret_here
STF_ADMIN_EMAIL=admin@devicefarm.com
STF_ADMIN_NAME=DeviceFarm Admin

# Network Configuration
PUBLIC_IP=172.20.10.2
STF_NETWORK=stf-network

# Port Configuration
STF_APP_PORT=3100
STF_AUTH_PORT=3200
STF_API_PORT=3700
STF_WEBSOCKET_PORT=3600
STF_STORAGE_APK_PORT=3300
STF_STORAGE_IMAGE_PORT=3400
STF_STORAGE_TEMP_PORT=3500
STF_PROVIDER_MIN_PORT=15000
STF_PROVIDER_MAX_PORT=15100

# ADB Configuration
ADB_HOST=adb
ADB_PORT=5037

# Timezone
TZ=America/Los_Angeles

# Basic Auth (optional)
BASIC_AUTH_USERNAME=
BASIC_AUTH_PASSWORD=
USE_BASIC_AUTH=false

# Storage Configuration
STORAGE_URL=http://stf-app:3100/

# WebSocket Configuration
WEBSOCKET_URL=ws://stf-websocket:3600/

# Auth Configuration
AUTH_URL=http://stf-auth:3200/auth/mock/ 